<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".Fragments.TimeTable">

    <TextView
        android:id="@+id/tv_ProgramAndYear_TimeTable"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:lines="1"
        android:padding="2dp"
        android:text="couse name"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_courseName_timetable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="4dp"
            android:layout_weight="3"
            android:autoSizeMaxTextSize="18sp"
            android:autoSizeTextType="uniform"
            android:background="#DA830E"
            android:gravity="center"
            android:lines="1"
            android:text="Course Name"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_courseTime_timetable"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="4dp"
            android:layout_weight="2"
            android:autoSizeMaxTextSize="18sp"

            android:autoSizeTextType="uniform"
            android:background="#DA830E"
            android:gravity="center"
            android:lines="1"
            android:text="Timing "
            android:textColor="#fff" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_timeTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>