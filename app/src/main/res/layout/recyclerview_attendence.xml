<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:weightSum="10">

    <TextView
        android:id="@+id/tv_stdNameRoll_RecyclerViewAttendence"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="6"
        android:autoSizeTextType="uniform"
        android:background="#000"
        android:gravity="left"
        android:lines="1"
        android:padding="8dp"
        android:text="Sagheer Hussain - 12345"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_Present_RecyclerViewAttendence"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1.33"
        android:autoSizeTextType="uniform"
        android:background="@color/colorGreen"
        android:gravity="center"
        android:padding="4dp"
        android:tag="green"
        android:text="P"
        android:textColor="#fff"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_Absent_RecyclerViewAttendence"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1.33"
        android:autoSizeTextType="uniform"
        android:background="@color/colorGray"
        android:gravity="center"
        android:padding="4dp"
        android:tag="gray"
        android:text="A"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_Sick_RecyclerViewAttendence"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1.33"
        android:autoSizeTextType="uniform"
        android:background="@color/colorGray"
        android:gravity="center"
        android:padding="4dp"
        android:tag="gray"
        android:text="S"
        android:textColor="#fff"
        android:textStyle="bold" />

</LinearLayout>